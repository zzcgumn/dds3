{
	"inputs": [],
	"servers": {
		"cpp": {
			"type": "stdio",
			"command": "${env:HOME}/go/bin/mcp-language-server",
			"args": [
				"-workspace",
				"${workspaceFolder}",
				"-lsp",
				"/opt/homebrew/opt/llvm/bin/clangd",
				"--",
				"--compile-commands-dir=${workspaceFolder}"
			],
			"env": {}
		},
		"serena": {
			"type": "stdio",
			"command": "/opt/homebrew/bin/uv",
			"args": [
				"run",
				"--directory",
				"${env:HOME}/Source/Python/serena",
				"serena",
				"start-mcp-server",
				"--project",
				"${workspaceFolder}"
			],
			"env": {}
		}
	}
}